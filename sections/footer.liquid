<footer
  role="contentinfo"
  class="grid min-h-[25rem] items-start grid-flow-row w-full gap-6 py-8 px-6 md:px-8 lg:px-12 border-b md:gap-8 lg:gap-12 grid-cols-1 md:grid-cols-2 bg-primary dark:bg-contrast dark:text-primary text-contrast overflow-hidden"
>
  {%- for block in section.blocks -%}
    {%- case block.type -%}
      {%- when 'link_list' -%}
        <section class="grid gap-4">
          <button class="text-left md:cursor-default">
            <h3 class="whitespace-pre-wrap max-w-prose font-bold text-lead flex justify-between">{{- block.settings.heading | escape -}}</h3>
          </button>
          <div class="overflow-hidden transition-all duration-300">
            <nav class="grid gap-2 pb-6">
              {%- for link in block.settings.menu.links -%}
                <a href="{{ link.url }}">
                  {{ link.title }}
                </a>
              {%- endfor -%}
            </nav>
          </div>
        </section>
      {%- when 'country_selector' -%}
    {%- endcase -%}
  {%- endfor -%}
</footer>

{% schema %}
{
  "name": "Footer",
  "blocks": [
    {
      "type": "link_list",
      "name": "Menu",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Quick links",
          "label": "Heading",
          "info": "Heading required to display the menu"
        },
        {
          "type": "link_list",
          "id": "menu",
          "default": "footer",
          "label": "Menu",
          "info": "Displays only top-level menu items"
        }
      ]
    },
    {
      "type": "country_selector",
      "name": "Country selector",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Country",
          "label": "Heading",
          "info": "Heading required to display the country selector"
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "link_list"
      },
      {
        "type": "country_selector"
      }
    ]
  }
}
{% endschema %}
