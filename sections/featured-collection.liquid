<div class="w-full gap-4 md:gap-8 grid py-6 md:py-8 lg:py-12">
  <h2 class="font-heading font-heading-weight text-lead px-6 md:px-8 lg:px-12">{{ section.settings.title | escape }}</h2>
  <div class="swimlane md:pb-8 md:scroll-px-8 lg:scroll-px-12 md:px-8 lg:px-12">
    {%- for product in section.settings.collection.products limit: section.settings.products_to_show -%}
      {%- render 'card-product', card_product: product -%}
      {%- else -%}
        {%- for i in (1..4) -%}
          {% render 'card-product' %}
        {%- endfor -%}
    {%- endfor -%}
  </div>
</div>

{% schema %}
{
  "name": "Featured collection",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Featured collection"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Maximum products to show",
      "default": 5,
      "min": 5,
      "max": 15,
      "step": 1
    }
  ],
  "presets": [
    {
      "name": "Featured collection"
    }
  ]
}
{% endschema %}
