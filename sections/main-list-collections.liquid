<div class="grid w-full gap-8 p-6 py-8 md:p-8 lg:p-12 justify-items-start">
  <h1 class="max-w-prose-narrow font-heading font-heading-weight text-heading inline-block">{{ page_title }}</h1>
</div>
<div class="w-full gap-4 md:gap-8 grid p-6 md:p-8 lg:p-12 border-none">
  {%- paginate collections by 12 -%}
    <ul class="grid-flow-row grid gap-2 gap-y-6 md:gap-4 lg:gap-6 grid-cols-1 md:grid-cols-2" role="list">
      {%- for collection in collections -%}
        <li>
          {% render 'card-collection', card_collection: collection %}
        </li>
      {%- endfor -%}
    </ul>
  {%- endpaginate -%}
</div>
{% schema %}
{
  "name": "Collections list page"
}
{% endschema %}

